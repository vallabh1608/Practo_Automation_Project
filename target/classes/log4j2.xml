<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{HH:mm:ss}] [%level] %c{1} - %msg%n"/>
    </Console>
    <File name="FileLogger" fileName="logs/practo-tests.log" append="true">
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%level] %c{1} - %msg%n"/>
    </File>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="FileLogger"/>
    </Root>
  </Loggers>
</Configuration>
